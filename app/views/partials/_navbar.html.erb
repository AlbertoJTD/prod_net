<section class="py-8 px-4 xl:px-10">
  <nav class="relative">
    <div class="flex justify-between items-center">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', size:'250x250' %>
      <% end %>

      <div class="lg:hidden">
        <button class="navbar-burger flex items-center p-3 hover:bg-gray-50 rounded">
          <%= inline_svg_tag('icons/menu.svg', class: 'block h-4 w-4') %>
        </button>
      </div>

      <ul class="hidden absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 lg:flex lg:w-auto lg:space-x-12">
        <li><%= link_to 'Main page', root_path, class:'text-sm font-medium' %></li>
      </ul>

      <div class="hidden lg:flex">
        <input type="text" placeholder="e.g. Product" class="px-4 py-3 lg:inline-block text-sm leading-normal font-medium border border-r-0 border-gray-100 rounded-l">
        <button class="px-2 rounded-r border border-gray-100 border-l-0">
          <%= inline_svg_tag('icons/magnifying_glass.svg', class: 'text-gray-300 w-4 h-4') %>
        </button>
      </div>
    </div>
  </nav>
</section>