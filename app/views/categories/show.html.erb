<%= render Shared::ModalComponent.new(title: @category.name) do |component| %>
  <%= component.with_body_section do %>
    <div class="px-10 py-5 space-y-5 text-black dark:text-white">
      <div>
        <%= @category.name %>
      </div>
    </div>
  <% end %>

  <%= component.with_footer_section do %>
    <%= component.with_footer_section do %>
      <div class="flex items-center p-4 md:p-5 space-x-3 rtl:space-x-reverse border-t border-gray-200 rounded-b dark:border-gray-600">
        <%= link_to t('.edit_category'), edit_category_path(@category), class: 'bg-blue-500 text-white px-4 py-2 rounded-md', data: { turbo_frame: 'modal' } %>
        <%= link_to t('.delete'), category_path(@category), 
            class: 'bg-red-500 text-white px-4 py-2 rounded-md', 
            data: { 
              turbo_method: :delete, 
              turbo_confirm: t('.confirm'),
              action: 'click->shared--modal#hideModal'
            } %>
      </div>
    <% end %>
  <% end %>
<% end %>
