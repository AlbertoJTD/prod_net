<%= button_to @url, 
    data: { turbo_method: :post }, 
    class: 'inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 px-4 py-2.5 text-center text-sm font-medium text-white hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg dark:focus:ring-blue-800' do %>
  <%= hidden_field_tag :votable_id, @votable.id %>
  <%= hidden_field_tag :votable_type, @votable.class.name %>

  <%= inline_svg_tag('icons/like.svg', class: 'w-5 h-5 text-white') %>
<% end %>
