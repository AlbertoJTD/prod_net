<div id="<%= dom_id(@product) %>" class="w-full md:w-1/2 lg:w-1/3 p-3">
  <div class="p-6 border rounded-xl hover:shadow-xl transition-shadow duration-300">
    <div class="relative h-52 mb-6">
      <%= render Categories::BadgeComponent.new(name: @product.categories.first.name) %>

      <%= image_tag @product.image, class: 'w-full h-full object-cover rounded-lg' if @product.image.attached? %>
    </div>
    <span class="inline-block mb-4 text-xs text-gray-500"><%= date_format(@product.created_at.to_date, format: :long) %></span>
    <h2 class="mb-4 text-2xl font-semibold font-heading"><%= highlight(@product.name, params[:query]) %></h2>
    <p class="mb-4 text-gray-500 leading-relaxed"><%= simple_description(@product.description) %></p>

    <%= link_to t('shared.see_details'), product_path(@product), class: 'text-sm font-medium text-red-500 underline hover:no-underline', data: { turbo_frame: 'modal' } %>
  </div>
</div>
